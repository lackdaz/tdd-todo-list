<h1>To Do List</h1>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Completed</th>
        <th>id</th>
        <th>Manage</th>
        <th>
          <form action="/deleteAll" method="post">
          <button type="submit" class="btn btn-default">Delete All</button>
          </form>
        </th>

    </tr>
    <% allTodos.forEach(function(todo,index){ %>
        <tr>
            <td>
                <%- index+1 %>
            </td>
            <td>
                <%- todo.name %>
            </td>
            <td>
                <%- todo.description %>
            </td>
            <td>
                <%- todo.completed %>
            </td>
            <td>
                <%- todo.id %>
            </td>
            <td>
              <form action="/<%- allTodos[0]._id%>" method="post">
                <button type="submit" class="btn btn-default">Manage</button>
              </form>
            </td>
            <td>
              <form action="/delete" method="post">
                <input type="hidden" name="id" value="<%-allTodos[0]._id%>" class="form-control" id="id">
                <button type="submit" class="btn btn-default">Delete</button>
              </form>
            </td>
        </tr>
        <% }) %>
</table>

<div class="form-container">
    <h1>Add New To Do</h1>
    <form action="/create" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Task name" value="Go to the supermarket">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" class="form-control" id="description" value='buy an apple' placeholder="e.g. Buy an apple from the supermarket">
        </div>

        <div class="form-group">
          <label for="completed">Completed?</label><br>
            <input type="radio" name="completed" id="is_true" value="true"/>
            <label>True</label>
            <input type="radio" name="completed" value="false" id="is_false" checked/>
            <label>False</label>
        </div>

        <button type="submit" class="btn btn-default">Add New To Do</button>
        <%# <div class="form-group">
               <label for="description">Description</label>
               <input type="checkbox" data-toggle="toggle" data-on="True" data-off="False">
           </div>%>
    </form>
</div>%>
